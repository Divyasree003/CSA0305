#include <stdio.h>

int main() {
    int n, i;
    long long t1 = 0, t2 = 1, next, sum = 0;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");
    for (i = 1; i <= n; i++) {
        printf("%lld ", t1);
        sum += t1;  // add each term to sum

        next = t1 + t2;
        t1 = t2;
        t2 = next;
    }

    printf("\nSum of Fibonacci Series up to %d terms = %lld\n", n, sum);

    return 0;
}
