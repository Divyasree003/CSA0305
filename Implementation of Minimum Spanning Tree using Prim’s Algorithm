#include <stdio.h>
#define MAX 100
#define INF 99999

void primMST(int graph[MAX][MAX], int n) {
    int selected[MAX];
    int no_edge = 0;
    int total_cost = 0;

    for (int i = 0; i < n; i++)
        selected[i] = 0;

    selected[0] = 1;

    printf("Edge\tWeight\n");

    while (no_edge < n - 1) {
        int min = INF;
        int x = 0, y = 0;

        for (int i = 0; i < n; i++) {
            if (selected[i]) {
                for (int j = 0; j < n; j++) {
                    if (!selected[j] && graph[i][j]) {
                        if (graph[i][j] < min) {
                            min = graph[i][j];
                            x = i;
                            y = j;
                        }
                    }
                }
            }
        }

        printf("%d - %d\t%d\n", x, y, graph[x][y]);
        total_cost += graph[x][y];
        selected[y] = 1;
        no_edge++;
    }

    printf("Total cost of MST: %d\n", total_cost);
}

// Sample usage
int main() {
    int n = 5;
    int graph[MAX][MAX] = {
        {0, 2, 0, 6, 0},
        {2, 0, 3, 8, 5},
        {0, 3, 0, 0, 7},
        {6, 8, 0, 0, 9},
        {0, 5, 7, 9, 0}
    };

    primMST(graph, n);

    return 0;
}
